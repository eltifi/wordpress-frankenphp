# ============================================================================
# SYSTEM & TIMEZONE CONFIGURATION
# ============================================================================
TZ=America/New_York

# ============================================================================
# AUTOMATED WORDPRESS INSTALLATION
# ============================================================================
WORDPRESS_URL=http://localhost
WORDPRESS_TITLE="Docker WordPress"
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=password
WORDPRESS_ADMIN_EMAIL=admin@example.com

# ============================================================================
# ADVANCED WORDPRESS CONFIGURATION
# ============================================================================
WORDPRESS_CONTENT_URL=
WORDPRESS_CONTENT_DIR=
WORDPRESS_DB_QUERY_TIMEOUT=5
WORDPRESS_FORCE_SSL_ADMIN=true
WORDPRESS_FORCE_SSL_LOGIN=true
WORDPRESS_CACHE_KEY_SALT=

# ============================================================================
# WORDPRESS DATABASE CONFIGURATION
# ============================================================================
WORDPRESS_DB_HOST=mysql:3306
WORDPRESS_DB_NAME=wordpress_db
WORDPRESS_DB_USER=wordpress_user
WORDPRESS_DB_PASSWORD=your_secure_password_here
WORDPRESS_DB_CHARSET=utf8mb4
WORDPRESS_DB_COLLATE=utf8mb4_unicode_ci
WORDPRESS_TABLE_PREFIX=wp_

# ============================================================================
# MYSQL CONFIGURATION
# ============================================================================
# MySQL root password (separate from WordPress user password)
MYSQL_ROOT_HOST=localhost

# ============================================================================
# WORDPRESS AUTHENTICATION KEYS & SALTS
# ============================================================================
# Generate new secure values at: https://api.wordpress.org/secret-key/1.1/salt/
# Leave empty for auto-generation at runtime, or set your own values:
WORDPRESS_AUTH_KEY=
WORDPRESS_SECURE_AUTH_KEY=
WORDPRESS_LOGGED_IN_KEY=
WORDPRESS_NONCE_KEY=
WORDPRESS_AUTH_SALT=
WORDPRESS_SECURE_AUTH_SALT=
WORDPRESS_LOGGED_IN_SALT=
WORDPRESS_NONCE_SALT=

# ============================================================================
# WORDPRESS DEBUG & LOGGING CONFIGURATION
# ============================================================================
WORDPRESS_DEBUG=false
WORDPRESS_DEBUG_LOG=false
WORDPRESS_CONFIG_EXTRA=

# ============================================================================
# WORDPRESS OPTIMIZATION & FEATURE CONFIGURATION
# ============================================================================
WORDPRESS_REDIS_HOST=redis
WORDPRESS_REDIS_PORT=6379
WORDPRESS_REDIS_DATABASE=0
WORDPRESS_REDIS_TIMEOUT=1
WORDPRESS_REDIS_READ_TIMEOUT=1
WORDPRESS_REDIS_PASSWORD=
WORDPRESS_REDIS_PREFIX=
WORDPRESS_AUTO_UPDATE_CORE=minor
WORDPRESS_AUTO_UPDATE_PLUGINS=false
WORDPRESS_AUTO_UPDATE_THEMES=false
WORDPRESS_CONCATENATE_SCRIPTS=false
WORDPRESS_COMPRESS_SCRIPTS=false
WORDPRESS_COMPRESS_CSS=false
WORDPRESS_MEMORY_LIMIT=1024M
WORDPRESS_MAX_MEMORY_LIMIT=1536M
WORDPRESS_DISALLOW_FILE_EDIT=true
WORDPRESS_EMPTY_TRASH_DAYS=30
WORDPRESS_AUTO_SAVE_INTERVAL=300

# ============================================================================
# FRANKENPHP WORKER CONFIGURATION
# ============================================================================
# CRITICAL: Enable Worker Mode for ~70% performance improvement
# Worker mode boots WordPress once and keeps it in memory
# Syntax: worker <script.php> [num_workers]
FRANKENPHP_CONFIG=worker /var/www/html/index.php 4

# Restart worker after N requests (prevents memory leak accumulation)
# Typical: 100,000 (balance between stability and restart overhead)
MAX_REQUESTS=100000

# ============================================================================
# FRANKENPHP THREAD CONFIGURATION
# ============================================================================
# Total PHP threads (default: 2x CPU cores)
# Increase for high-traffic, decrease for limited resources
FRANKENPHP_NUM_THREADS=8

# Maximum PHP threads (auto = unlimited scaling)
FRANKENPHP_MAX_THREADS=auto

# ============================================================================
# WEB SERVER (CADDY) CONFIGURATION
# ============================================================================
# Server name/domain for Caddy
SERVER_NAME=localhost

# Server root directory for Caddy
CADDY_SERVER_ROOT=/var/www/html

# Force HTTPS (set to 1 to enable)
FORCE_HTTPS=0

# TLS/SSL configuration
# Leave empty for auto HTTPS with local self-signed certs
# Set to your domain for production HTTPS (e.g., example.com)
CADDY_SERVER_TLS=

# Server-specific Caddy options
CADDY_SERVER_OPTIONS=

# Global Caddy options (e.g., 'debug' for verbose logging)
CADDY_GLOBAL_OPTIONS=

# ============================================================================
# PHP RUNTIME CONFIGURATION
# ============================================================================
# Custom PHP extensions to install
PHP_EXTENSIONS=

# Additional PHP configuration directory scan
PHP_INI_SCAN_DIR=

# Go runtime debug settings (e.g., 'cgocheck=0' for performance)
GODEBUG=cgocheck=0

# Go memory limit for container environments
GOMEMLIMIT=

# Debug mode (set to 'debug' for verbose logging)
DEBUG_MODE=

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# GitHub Personal Access Token (for API rate limits)
GITHUB_TOKEN=

# ============================================================================
# SMTP CONFIGURATION
# ============================================================================
WORDPRESS_SMTP_HOST=localhost
WORDPRESS_SMTP_PORT=1025
WORDPRESS_SMTP_USER=
WORDPRESS_SMTP_PASSWORD=
WORDPRESS_SMTP_FROM=wordpress@localhost
WORDPRESS_SMTP_FROM_NAME="WordPress System"

# ============================================================================
# GENERAL SETTINGS CONFIGURATION
# ============================================================================
WORDPRESS_TAGLINE="Just another WordPress site"
WORDPRESS_MEMBERSHIP=0 # 0 for false, 1 for true
WORDPRESS_DEFAULT_ROLE=subscriber
WORDPRESS_LANGUAGE=en_US
WORDPRESS_TIMEZONE=UTC
WORDPRESS_DATE_FORMAT="F j, Y"
WORDPRESS_TIME_FORMAT="g:i a"
WORDPRESS_START_OF_WEEK=1 # 1 = Monday

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Backup schedule (cron expression) - Default: Every 12 hours
BACKUP_CRON_EXPRESSION="0 */12 * * *"
# Retention (e.g., 7 days)
BACKUP_RETENTION_DAYS=7
# Minio / S3 Configuration
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET_NAME=wordpress-backups
AWS_ENDPOINT=http://minio:9000
# For local Minio, we need path style access
AWS_S3_FORCE_PATH_STYLE=true
# Name prefixes for backup files

# ============================================================================
# S3 UPLOADS CONFIGURATION (Enable for stateless uploads)
# ============================================================================
ENABLE_S3_UPLOADS=false
# If using Minio, use same bucket/creds as backups or different ones
S3_UPLOADS_BUCKET=wordpress-uploads
S3_UPLOADS_REGION=us-east-1
S3_UPLOADS_ENDPOINT=http://minio:9000
# Key/Secret usually reuse AWS_ACCESS_KEY_ID/AWS_SECRET_ACCESS_KEY
# S3_UPLOADS_KEY=
# S3_UPLOADS_SECRET=
# S3_UPLOADS_BUCKET_URL=

